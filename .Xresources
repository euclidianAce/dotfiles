! URxvt extensions
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.iso14755: False

URxvt.perl-ext-common: default,resize-font

XTerm*selectToClipboard: true
XTerm*ptyInitialErase: true
XTerm*eightBitInput: false
XTerm*eightBitOutput: true
XTerm*lineDrawingCharacters: true

*locale: en_US.UTF-8

*.font: xft:Terminus (TTF):size=12:antialias=false
/* *.font: xft:Fixedsys Excelsior 3.01:size=12 */
/* *.font: xft:Termsyn:size=12:antialias=false */
/* *.font: xft:Terminus:size=12 */
/* *.font: xft:Ubuntu Mono:size=12:antialias=true */
/* *.font: xft:Hasklig:size=11:antialias=true */
/* *.font: -*-terminus-*-*-*-*-14-*-*-*-*-*-*-* */
/* *.font = xft:Julia Mono:size=12:antialias=true */
/* *.font = xft:Fixedsys Excelsior */

*.letterSpace: 1
*.lineSpace: 0
*.scrollBar: false
*.internalBorder: 10
*.cursorBlink: true
URxvt.pointerBlank: true

*.foreground: #d8cee4
*.background: #181520

! black
*.color0: #21222c
*.color8: #6272a4

! red
*.color1: #d16161
*.color9: #e69090

! green
*.color2: #53b67e
*.color10: #7bce8f

! yellow
*.color3: #d5c876
*.color11: #f0e7ac

! blue
*.color4: #799ae0
*.color12: #aac3fd

! magenta
*.color5: #c24472
*.color13: #ef6194

! cyan
*.color6: #429da0
*.color14: #70C3C6

! white
*.color7: #f8f8f2
*.color15: #ffffff
